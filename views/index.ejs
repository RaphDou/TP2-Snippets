<%- include('includes/head.ejs') %>

  <body>
    <header>
      <%- include('includes/navigation.ejs') %>
    </header>

    <%- include('includes/banner.ejs') %>


    <main class="container mt-3 mb-5 text-center">
      <% if (snippets.length> 0) { %>
        <h1 class="mb-4 text-light mt-5 text-center">Search by Tags</h1>
        <div class="container bg bg-tags g-4 p-3">
          <% let uniqueTags=new Set(); %>
            <% for (let snippet of snippets) { %>
              <% if (snippet.tags && snippet.tags.length> 0) { %>
                <% for (let tag of snippet.tags) { %>
                  <% uniqueTags.add(tag); %>
                    <% } %>
                      <% } %>
                        <% } %>
                          <% if (uniqueTags.size> 0) { %>
                            <% for (let tag of uniqueTags) { %>
                              <% if (tag.trim() !=='' ) { %>
                                <a href="/tag/<%= tag %>" class="btn btn-light tag">
                                  <%= tag %>
                                </a>
                                <% } %>
                                  <% } %>
                                    <% } %>
        </div>
        <% } %>

          <% if (snippets.length> 0) { %>
            <h1 class="mb-4 text-light mt-5">My Snippets</h1>
            <div>
              <% snippets.sort((a, b)=> new Date(b.createdAt) - new Date(a.createdAt)); %>
                <% for (let snippet of snippets) { %>
                  <snippet class="col mb-5">
                    <div class="card shadow">
                      <div class="card-body">
                        <h2 class="card-title">
                          <% if (snippet.url && snippet.url.startsWith('https://')) { %>
                            Title:
                            <a target="_blank" class="mt-5 mb-3 text-dark" href="<%= snippet.url %>">
                              <%= snippet.title %>
                            </a>
                            <% } else { %>
                              Title:
                              <span class="mt-5 mb-3 text-dark">
                                <%= snippet.title %>
                              </span>
                              <% } %>
                        </h2>

                        <div>
                          <p>
                            <% if (snippet.tags && snippet.tags.length> 0) { %>
                              <strong>Tag(s):</strong> <%= snippet.tags %>
                                <% } else { %>
                                  There are no tags here!
                                  <% } %>
                          </p>
                        </div>

                      </div>
                      <div>
                        <p>
                          <% if (snippet.content.trim() !=='' ) { %>
                            <strong>Contenu:</strong> <%= snippet.content %>
                              <% } else { %>
                                There is no content here!
                                <% } %>
                        </p>
                      </div>
                      <div class="card-text">
                        <p>
                          <strong>Created on:</strong> <%= formatDate(snippet.createdAt) %> at <%= formatTime(snippet.createdAt) %>
                        </p>
                      </div>
                      <div class="card-footer bg-white">
                        <div class="card-footer bg-white">
                          <div class="btn-group" role="group" aria-label="Actions">
                            <a href="/snippet/<%= snippet.id %>" class="btn btn-success mr-2"><i class="bi bi-eye"></i>
                              View</a>
                            <a href="/edit-snippet/<%= snippet.id %>" class="btn btn-warning mr-2"><i
                                class="bi bi-pencil"></i> Edit</a>
                            <a href="/delete/<%= snippet.id %>" class="btn btn-danger"
                              onclick="return confirm('Are you sure you want to delete this snippet?')"><i
                                class="bi bi-trash"></i> Delete</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </snippet>
                  <% } %>
            </div>
            <% } else { %>
              <section class="container mt-5">
                <div class="row justify-content-center">
                  <div class="col-md-6 text-center">
                    <h1 class="display-4 text-light">:</h1>
                    <p class="lead text-light">There doesn't seem to be any snippets at the moment!</p>
                    <a href="add-snippet" class="btn btn-primary"><i class="bi bi-house-door"></i> I want to create a
                      snippet!</a>
                  </div>
                </div>
              </section>
              <% } %>

    </main>

    <% function formatDate(date) { const options={ weekday: 'long' , year: 'numeric' , month: 'long' , day: 'numeric' };
      return new Date(date).toLocaleDateString('en-US', options); } function formatTime(date) { const options={
      hour: 'numeric' , minute: 'numeric' }; return new Date(date).toLocaleTimeString('en-US',
      options).replace(/:\d{2}\s/, ' ' ); } %>

      <%- include('includes/end.ejs') %>
  </body>