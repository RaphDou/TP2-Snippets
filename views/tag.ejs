<%- include('includes/head.ejs') %>

<body>
  <header>
    <%- include('includes/navigation.ejs') %>
  </header>
  <%- include('includes/background.ejs') %>

  <h1 class="mb-4 text-center mt-5 text-light"><%= pageTitle %></h1>

  <main class="container mt-4 card mb-5 mt-5 p-5 text-dark">
    <% if (snippets.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% for (let snippet of snippets) { %>
          <snippet class="col mb-5">
            <div class="card shadow">
              <div class="card-body">
                <h2>Titre: <%= snippet.title %></h2>
                <p>Contenu: <%= snippet.content %></p>
                <p>Tags: <%= snippet.tags.join(', ') %></p>
              </div>
              <div class="card-footer">
                <a href="/snippet/<%= snippet.id %>" class="btn btn-success">Voir</a>
              </div>
            </div>
          </snippet>
        <% } %>
      </div>
    <% } else { %>
      <div class="text-center">
        <p>Aucun snippet trouv√© avec le tag "<%= pageTitle.substring(pageTitle.lastIndexOf(' "') + 2, pageTitle.length - 1) %>"</p>
      </div>
    <% } %>
  </main>

  <%- include('includes/end.ejs') %>
</body>
